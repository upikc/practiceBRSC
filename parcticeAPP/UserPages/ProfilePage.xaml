<Page x:Class="parcticeAPP.UserPages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:parcticeAPP.UserPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <Label Content="Имя:" FontSize="20"/>
            <Label x:Name="nameTbox" Content="ИМЯ" FontSize="40" Margin="40,0,40,0"/>
            <Label Content="Почта:" FontSize="20"/>
            <Label x:Name="mailTbox" Content="ПОЧТА" FontSize="40" Margin="40,0,40,0"/>
            <Label Content="Роль:" FontSize="20"/>
            <Label  x:Name="roleTbox" Content="РОЛЬ" FontSize="40" Margin="40,0,40,0"/>
        </StackPanel>
    </Grid>
</Page>
