<Page x:Class="parcticeAPP.UserPages.DataEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:parcticeAPP.UserPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataEditPage">

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <Label x:Name="usersComboBoxlabel" Content="Выбор Пользователя:" FontSize="20"/>
            <ComboBox x:Name="usersComboBox" FontSize="30"  Margin="40,0,40,0" SelectionChanged="usersComboBox_SelectionChanged"  />
            <Label Content="Имя:" FontSize="20"/>
            <TextBox x:Name="NameTbox" FontSize="30" Margin="40,0,40,0"/>
            <Label Content="Почта:" FontSize="20"/>
            <TextBox x:Name="MailTbox" FontSize="30" Margin="40,0,40,0"/>
            <Label x:Name="PassLabel" Content="Пароль:" FontSize="20"/>
            <TextBox x:Name="PassTbox"  FontSize="30" Margin="40,0,40,0"/>
            <Label x:Name="roleLabel" Content="Роль:" FontSize="20"/>
            <ComboBox x:Name="roleComboBox" FontSize="30"  Margin="40,0,40,0"  />
            <Button Content="Изменить" FontSize="30" Margin="40,10,40,10" Click="confirm" />
        </StackPanel>
    </Grid>
</Page>
