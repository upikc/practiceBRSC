<Page x:Class="parcticeAPP.AuthPages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:parcticeAPP.AuthPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Почта:" FontSize="20"/>
            <TextBox x:Name="MailTbox" FontSize="40" Margin="40,0,40,0"/>
            <Label Content="Пароль:" FontSize="20"/>
            <TextBox x:Name="PassTbox" FontSize="40" Margin="40,0,40,10"/>
            <Button Content="Войти" FontSize="40"  Margin="40,10,40,10" Click="AuthBtnClick"/>
        </StackPanel>
    </Grid>
</Page>
